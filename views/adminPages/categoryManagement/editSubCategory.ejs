<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no"
      name="viewport"
    />
    <title>Xpo - Add New SubCategory</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="/assets/css/app.min.css" />
    <!-- Template CSS -->
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/components.css" />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="/assets/img/favicon.ico"
    />
  </head>

  <body>
    <div class="loader"></div>
    <div id="app">
      <div class="main-wrapper main-wrapper-1">
        <%- include('../partials/navbar') %> <%- include('../partials/sidebar')
        %>
        <input type="hidden" id="categoryId" value="<%= categoryId %>" />
        <input
          type="hidden"
          id="subCategoryId"
          value="<%= subCategory._id %>"
        />

        <!-- Main Content start-->
        <div class="main-content">
          <section class="section">
            <form>
              <div class="section-body">
                <div class="row justify-content-center">
                  <div class="col-12 col-lg-6">
                    <div class="card">
                      <div class="card-header justify-content-between">
                        <h4>Add New SubCategory</h4>
                        <div>
                          <a
                            href="/admin/subCategory/<%= categoryId %>"
                            class="btn btn-dark text-white"
                          >
                            <i data-feather="chevrons-left"></i> Back to
                            SubCategories Page
                          </a>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="text-center text-danger">
                          <label id="logErrorMessage"
                            >Edit SubCategory Details</label
                          >
                        </div>
                        <div class="form-row">
                          <div class="form-group col-md-8">
                            <label for="subCategoryName"
                              >SubCategory Name</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="subCategoryName"
                              placeholder="SubCategory Name"
                              name="subCategoryName"
                              value="<%= subCategory.subCategoryName %>"
                            />
                          </div>
                          <div class="form-group col-md-4">
                            <label for="inputStatus">Status</label>
                            <select
                              id="inputStatus"
                              class="form-control"
                              name="status"
                            >
                              <option selected>
                                <%= subCategory.isInactive ? "Inactive" :
                                "Active" %>
                              </option>
                              <option>
                                <%= subCategory.isInactive ? "Active" :
                                "Inactive" %>
                              </option>
                            </select>
                          </div>
                          <div class="form-group col-md-6">
                            <label for="inputOfferStatus">Offer Status</label>
                            <select
                              id="inputOfferStatus"
                              class="form-control"
                              name="offerStatus"
                            >
                              <option selected>
                                <%= subCategory.offerStatus === false ?
                                "Inactive" : "Active" %>
                              </option>
                              <option>
                                <%= subCategory.offerStatus === false ? "Active"
                                : "Inactive" %>
                              </option>
                            </select>
                          </div>
                          <div class="form-group col-md-6">
                            <label for="offerPercentage"
                              >Offer Percentage (Empty/0)</label
                            >
                            <input
                              type="number"
                              class="form-control"
                              id="offerPercentage"
                              placeholder="Offer Percentage"
                              name="offerPercentage"
                              value="<%= subCategory.offerPercentage %>"
                            />
                          </div>
                          <div class="form-group col-md-6">
                            <label for="price">Start Date</label>
                            <input type="date" class="form-control"
                            id="startDate" placeholder="Start Date"
                            name="startDate" value="<%=
                            subCategory.offerStartDate ?
                            subCategory.offerStartDate.toISOString().split('T')[0]
                            : '' %>"" />
                          </div>
                          <div class="form-group col-md-6">
                            <label for="price">Expiry Date</label>
                            <input
                              type="date"
                              class="form-control"
                              id="expiryDate"
                              placeholder="Expiry Date"
                              name="expiryDate"
                              value="<%= subCategory.offerEndDate ? subCategory.offerEndDate.toISOString().split('T')[0] : '' %>"
                            />
                          </div>
                        </div>
                      </div>
                      <div class="card-footer align-center">
                        <button class="btn btn-primary" id="editSubCategoryBtn">
                          <i data-feather="save"> </i> Save Changes
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </section>
        </div>
        <!-- Main Content end-->
      </div>
    </div>

    <script src="/js/adminPages/categoryManagement/editSubCategory.js"></script>

    <!-- General JS Scripts -->
    <script src="/assets/js/app.min.js"></script>
    <!-- Template JS File -->
    <script src="/assets/js/scripts.js"></script>
  </body>
</html>
